version: '3.7'

services:
  couchdb:
    image: ibmcom/couchdb3:3.0.0
    restart: always
    ports:
      - "5984:5984"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - ./data:/opt/couchdb/data
    environment:
      - COUCHDB_USER={{ database_user }}
      - COUCHDB_PASSWORD={{ database_password }}
      - COUCHDB_SECRET={{ cookie }}
      - NODENAME={{ nodename }}
    container_name: couchDB